<div class="container">
  <% if(message.length > 0) { %>
    <div class="mt-3 alert alert-success">
      <%= message %>
    </div>
  <% } %>
  <h1 class="mb-2 mt-3" style="font-size: 25px;">Create Post</h1>
  <form action="/posts" method="POST">
    <div class="form-group">
       <!-- hash tag for commenting out <%# code %> -->
      <input required value="<%= post.title %>" type="text" name="title" id="title" class="form-control" placeholder="Title">
    </div>
    <div class="form-group">
      <input type="hidden" name="hiddenHashtag" id="hashtag" value="#@Posts">
      <input type="text" name="hashtags" id="hashtag" class="form-control" placeholder="#">
    </div>
    <div class="form-group">
      <textarea id="createPostContent" name="content" class="form-control" placeholder="Content" rows="5"><%= post.content %></textarea>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button id="submitBtn" type="submit" class="btn btn-outline-primary">Submit</button>
  </form>
</div>
